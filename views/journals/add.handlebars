<h1>
  Add Journal
</h1>
<div class="row">
  <form action="/journals" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" />
        <label for="title">
          Title
        </label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status">
          <option value="public" selected="">
            Public
          </option>
          <option value="private">
            Private
          </option>
          <option value="unpublished">
            Unpublished
          </option>
        </select>
        <label for="status">
          Status
        </label>
      </div>
    </div>
    <div class="row">
      <p>
        <label for="allowComments">
          <input type="checkbox" id="allowComments" name="allowComments" class="filled-in" />
          <span>
            Allow Comments
          </span>
        </label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>
          Write your Journal
        </h5>
        <textarea name="body"></textarea>
      </div>
    </div>
    <input type="submit" value="save" class="btn red accent-3" />
  </form>
</div>